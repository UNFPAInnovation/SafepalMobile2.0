<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowBackground">@drawable/app_background</item>-->
        <!--fonts-->
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="NiceButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/call_button_enabled</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!--fonts-->
    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">

    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">

    </style>

    <style name="materialButtonNormal" parent="Widget.AppCompat.Button.Colored">

    </style>

    <!--support from lollipop-->
    <style name="materialButtonAttention" parent="Widget.AppCompat.Button.Colored">

        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:background">@drawable/button_bg_attention</item>
    </style>

    <!--
    spinner
    <item name="android:background">@color/colorAccent</item>
    <item name="android:background">@drawable/spinner_bg</item>
    -->
    <style name="coolSpinnerNormal" parent="Widget.AppCompat.Spinner.DropDown">

        <item name="android:dropDownVerticalOffset">@dimen/spinner_dropdown_vert_offset</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>

    </style>

    <dimen name="spinner_dropdown_vert_offset">40dp</dimen>

  <!-- Styles for the show case view guide -->

    <style name="ReportTitle" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textColor">#fffdfd</item>
    </style>

    <style name="GuideText" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#181b2b</item>
    </style>


    <style name="GuideText2" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#eceffc</item>
    </style>
    <style name="ReportShowcaseTheme" parent="ShowcaseView">
        <item name="sv_backgroundColor">#eb01a89e</item>
        <item name="sv_showcaseColor">#002d30</item>
        <item name="sv_buttonText">Next</item>
        <item name="sv_titleTextAppearance">@style/ReportTitle</item>
        <item name="sv_detailTextAppearance">@style/GuideText</item>
    </style>


    <style name="ExitShowcaseTheme" parent="ShowcaseView">
        <item name="sv_backgroundColor">#e2e48900</item>
        <item name="sv_showcaseColor">#663d00</item>
        <item name="sv_buttonText">Next</item>
        <item name="sv_titleTextAppearance">@style/ReportTitle</item>
        <item name="sv_detailTextAppearance">@style/GuideText</item>
    </style>


    <style name="NextShowcaseTheme" parent="ShowcaseView">
        <item name="sv_backgroundColor">#dd00840d</item>
        <item name="sv_showcaseColor">#0d5900</item>
        <item name="sv_buttonText">Got it</item>
        <item name="sv_titleTextAppearance">@style/ReportTitle</item>
        <item name="sv_detailTextAppearance">@style/GuideText2</item>
    </style>

</resources>
